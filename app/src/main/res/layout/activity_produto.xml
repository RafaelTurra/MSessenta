<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ActivityProduto">

        <EditText
                android:id="@+id/edtNomeProduto"
                android:hint="Nome Produto"
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:layout_height="wrap_content"/>

        <Space android:layout_width="match_parent"
               android:layout_height="10dp"/>

        <EditText
                android:id="@+id/edtQuantidadeProduto"
                android:layout_width="match_parent"
                android:hint="Quantidade Desejada:"
                android:inputType="numberSigned"
                android:layout_height="wrap_content"/>

        <Space android:layout_width="match_parent"
               android:layout_height="10dp"/>

        <EditText
               android:id="@+id/edtPrecoProduto"
               android:layout_width="match_parent"
               android:hint="PreÃ§o do produto"
               android:inputType="numberDecimal"
               android:layout_height="wrap_content"/>


        <Space android:layout_width="match_parent"
               android:layout_height="10dp"/>

        <Button
                android:id="@+id/btnSalvarProduto"
                android:text="Salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

</LinearLayout>